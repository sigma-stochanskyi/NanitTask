<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <font
        android:font="@font/source_sans_pro_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/source_sans_pro_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <font
        android:font="@font/source_sans_pro_italic"
        android:fontStyle="italic"
        android:fontWeight="400"
        app:font="@font/source_sans_pro_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />

    <font
        android:font="@font/source_sans_pro_light"
        android:fontStyle="normal"
        android:fontWeight="300"
        app:font="@font/source_sans_pro_light"
        app:fontStyle="normal"
        app:fontWeight="300" />

    <font
        android:font="@font/source_sans_pro_light_italic"
        android:fontStyle="italic"
        android:fontWeight="300"
        app:font="@font/source_sans_pro_light_italic"
        app:fontStyle="italic"
        app:fontWeight="300" />

    <font
        android:font="@font/source_sans_pro_semi_bold"
        android:fontStyle="normal"
        android:fontWeight="600"
        app:font="@font/source_sans_pro_semi_bold"
        app:fontStyle="normal"
        app:fontWeight="600" />

    <font
        android:font="@font/source_sans_pro_semi_bold_italic"
        android:fontStyle="italic"
        android:fontWeight="600"
        app:font="@font/source_sans_pro_semi_bold_italic"
        app:fontStyle="italic"
        app:fontWeight="600" />

    <font
        android:font="@font/source_sans_pro_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/source_sans_pro_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />

    <font
        android:font="@font/source_sans_pro_bold_italic"
        android:fontStyle="italic"
        android:fontWeight="700"
        app:font="@font/source_sans_pro_bold_italic"
        app:fontStyle="italic"
        app:fontWeight="700" />

    <font
        android:font="@font/source_sans_pro_black"
        android:fontStyle="normal"
        android:fontWeight="900"
        app:font="@font/source_sans_pro_black"
        app:fontStyle="normal"
        app:fontWeight="900" />

    <font
        android:font="@font/source_sans_pro_black_italic"
        android:fontStyle="italic"
        android:fontWeight="900"
        app:font="@font/source_sans_pro_black_italic"
        app:fontStyle="italic"
        app:fontWeight="900" />

